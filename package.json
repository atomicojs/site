{
    "name": "@atomico/site",
    "description": "Atomico site Components",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.8.0",
    "type": "module",
    "scripts": {
        "start": "vite --force",
        "build": "vite build",
        "pkg:types": "tsc",
        "pkg:compile": "library \"src/**/*.{ts,tsx,css}\"",
        "pkg:exports": "exports \"lib/**/*\" \"types/**/*\" --wrappers --main components --centralize-wrappers",
        "prepublishOnly": "run pkg:* -s",
        "create": "scaff templates/component src"
    },
    "dependencies": {
        "@atomico/compare-content": "^1.2.3",
        "@atomico/hooks": "^4.0.0-beta.3",
        "@formkit/auto-animate": "^0.8.0",
        "atomico": "^1.75.1",
        "scrollable-component": "^1.2.1"
    },
    "devDependencies": {
        "@atomico/exports": "^1.13.1",
        "@atomico/postcss-tokens": "^3.4.5",
        "@atomico/run": "^0.14.1",
        "@atomico/scaffold": "latest",
        "@atomico/tsconfig": "1.0.0",
        "@atomico/vite": "^2.17.8",
        "prismjs": "^1.29.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.10"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "endOfLine": "lf"
    },
    "postcss": {
        "plugins": {
            "@atomico/postcss-tokens": {
                "prefix": "atomico"
            }
        }
    }
}
