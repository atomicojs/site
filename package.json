{
    "name": "@atomico/site",
    "description": "Atomico site Components",
    "workspaces": [
        "src/*"
    ],
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "vite",
        "build": "vite build",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "exports": "exports src/components.js --exports --types --main components",
        "prepublishOnly": "npm run exports",
        "create": "scaff templates/component src"
    },
    "dependencies": {
        "@atomico/hooks": "^3.45.0",
        "atomico": "latest"
    },
    "devDependencies": {
        "@atomico/exports": "latest",
        "@atomico/postcss-tokens": "latest",
        "@atomico/scaffold": "latest",
        "@atomico/tsconfig": "1.0.0",
        "@atomico/vite": "latest",
        "happy-dom": "latest",
        "vite": "latest",
        "vitest": "latest"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    },
    "postcss": {
        "plugins": {
            "@atomico/postcss-tokens": {}
        }
    }
}
