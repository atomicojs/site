{
    "name": "@atomico/site",
    "description": "Atomico site Components",
    "workspaces": [
        "src/*"
    ],
    "publishConfig": {
        "access": "public"
    },
    "version": "0.6.0",
    "type": "module",
    "scripts": {
        "start": "vite --force",
        "build": "vite build",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "exports": "exports src/**/*.{ts,tsx} !src/{site,site-why}.tsx  --exports --types --main components",
        "prepublishOnly": "npm run exports",
        "create": "scaff templates/component src"
    },
    "dependencies": {
        "@atomico/compare-content": "^1.2.3",
        "@atomico/hooks": "^3.49.0",
        "@formkit/auto-animate": "^0.8.0",
        "atomico": "^1.74.0"
    },
    "devDependencies": {
        "@atomico/exports": "^1.10.0",
        "@atomico/postcss-tokens": "^2.1.0",
        "@atomico/scaffold": "latest",
        "@atomico/tsconfig": "1.0.0",
        "@atomico/vite": "^2.11.2",
        "typescript": "^4.7.4",
        "vite": "^4.4.9"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "endOfLine": "lf"
    },
    "postcss": {
        "plugins": {
            "@atomico/postcss-tokens": {
                "prefix": "atomico",
                "defaultValue": true
            }
        }
    }
}
